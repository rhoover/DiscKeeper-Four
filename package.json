{
  "name": "disckeeperfour",
  "version": "1.0.0",
  "description": "As much re-tooling as re-coding",
  "main": ".eleventy.js",
  "scripts": {
    "watch:critical": "sass --style compressed --no-source-map --watch src/sass/critical.scss:src/critical/critical.css",
    "watch:eleventy": "rm -rf dist && npx @11ty/eleventy --serve",
    "serve": "npm-run-all --parallel watch:eleventy watch:critical",
    "serviceworker": "terser disckeeper-service-worker.js -o disckeeper-service-worker-min.js",
    "build:final": "rm -rf dist && ELEVENTY_RUN_MODE=build npx @11ty/eleventy",
    "build": "npm-run-all serviceworker build:final"
  },
  "keywords": [
    "discgolf",
    "disc golf scoring"
  ],
  "author": "robin@moosedog.io",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "breakpoint-sass": "^3.0.0",
    "eleventy-plugin-rev": "^2.0.0",
    "eleventy-sass": "^2.2.4",
    "html-minifier": "^4.0.0",
    "minifier": "^0.8.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.5",
    "terser": "^5.26.0"
  }
}
